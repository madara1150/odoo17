<odoo>
    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <!-- ถ้า rate อักษรจะสีแดง  -->
            <tree class="header_custom" decoration-danger="(is_late)">
                <field name="name"/>
                <field name="postcode"/>
                <field name="is_late" invisible="1"/>
                <field name="owner_id"/>
                <field name="date_availability"/>
                <field name="selling_price"/>
                <field name="garden"/>
                <field name="facades"/>
                <field name="state"/>
                <field name="garden_area"/>
                <field name="bedrooms" optional="1"/>
                <field name="garage" optional="1"/>
                <field name="active" optional="1"/>
            </tree>
        </field>
    </record>

    <record id="property_view_form" model="ir.ui.view">
        <field name="name">property form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button name="action" type="object" class="btn-primary" string="Action" />
                        <button name="action_draft" type="object" class="btn-primary" string="Set to Draft" invisible="state == 'draft'" />
                        <button name="action_sold" type="object" class="btn-secondary" string="Set to sold" invisible="state == 'sold'" />
                        <!-- statusbar_visible="draft, sold" ตั้งว่าให้แสดงแค่ darft กับ sold -->
                        <field name="state" widget="statusbar" options="{'clickable' : 1}" />
                    </header>
                    <div class="oe_title">
                        <label for="name" />
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General Info.">
                            <field name="date_availability" required="1"/>
                            <field name="expected_selling_date"/>
                            <!-- เช็คตามเวลาที่กรอก expected_priced_date -->
                            <field name="is_late" invisible="1"></field>
                            <field name="postcode"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="diff"/>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                        </group>
                        <group string="Additional Info.">
                            <field name="owner_id"/>
                            <field name="owner_address"/>
                            <field name="owner_phone"/>
                            <field name="garden_area"/>
                            <field name="bedrooms"/>
                            <field name="garden"/>
                            <field name="garden_area"/>
                            <field name="garage"/>
                            <field name="garden_orientation"/>
                            <field name="active"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="description" required="1" />
                        </group>

                        <!-- แทบข้างล่าง -->
                        <notebook>
                            <page string="bedrooms">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="description"></field>
                                        <field name="area"></field>
                                    </tree>
                                </field>
                            </page>
                        </notebook>


                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"></field>
                    <field name="activity_ids"></field>
                    <field name="message_ids"></field>
                </div>
            </form>
        </field>
    </record>

    <record id="property_view_search" model="ir.ui.view">
        <field name="name">property search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="postcode"/>

                <filter name="is_garden" string="With Garden" domain="[('garden', '=', True)]" />
                <filter name="is_not_garden" string="Without Garden" domain="[('garden', '=', False)]" />
                <filter name="is_garage" string="With Garage" domain="[('garage', '=', True)]" />
                <filter name="group_garden" string="Garden" context="{'group_by': 'garden'}" />
            </search>
        </field>
    </record>
    

    <record id="property_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">property</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <!-- server action -->
    <record id="property_closed_server_action" model="ir.actions.server">
        <field name="name">Closed</field>
        <field name="model_id" ref="model_property"></field>
        <field name="binding_model_id" ref="model_property"></field>
        <field name="state">code</field>
        <!-- ชื่อฟังชั่นใน property.py -->
        <field name="code">action = records.action_closed()</field>
    </record>

    <!-- ตั้งเวลา auto ไว้เพื่อทำ exec บางอย่าง -->
    <record id="check_selling_date_cron" model="ir.cron">
        <field name="name">Property: Check selling date</field>
        <field name="model_id" ref="model_property"></field>
        <field name="state">code</field>
        <!-- ชื่อฟังชั่นใน property.py -->
        <field name="code">model.check_expected_selling_date()</field>
        <!-- ทำทุก 1 วัน -->
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <!-- จำนวนครั้งที่ทำ -->
        <field name="numbercall">-1</field>
        <!-- active ไหม -->
        <field name="active">True</field>
    </record>
    
    <!-- สร้างเมนู  -->
    <menuitem 
        id="property_menu_item"
        name="Properties"
        parent="properties_menu"
        action="property_action"
    />
</odoo>